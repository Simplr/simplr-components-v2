  {
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "lib": ["esnext", "es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "declaration": true,
    "rootDir": "./",
    "outDir": "./lib",
    "composite": true
  },
  "include": ["**/*.ts", "../core/**/*.ts"]
}
